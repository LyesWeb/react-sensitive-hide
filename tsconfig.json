{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "jsx": "react-jsx",
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": false,
      "resolveJsonModule": true
    },
    "include": ["src", "example"],
    "exclude": ["node_modules", "dist"]
  }